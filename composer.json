{
    "name": "foa/responder-bundle",
    "description": "Responder for action domain responder(adr) pattern",
    "require": {
        "aura/web":"2.*",
        "aura/accept":"2.*",
        "foa/domain-payload":"1.*"
    },
    "require-dev": {
        "foa/html-view-bundle":"2.*",
        "league/plates":"~3.0",
        "mustache/mustache":"~2.0",
        "twig/twig":"~1.0"
    },
    "license": "BSD-2-Clause",
    "autoload": {
        "psr-4": {
            "FOA\\Responder_Bundle\\":"src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "FOA\\Responder_Bundle\\": ["tests/unit/src/", "tests/integration/src/"]
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "0.3.x-dev"
        }
    },
    "suggest": {
        "foa/html-view-bundle": "For integrating aura view and html seamlessly",
        "league/plates":"For integrating plates templating",
        "mustache/mustache":"For integrating Mustache.php",
        "twig/twig":"For integrating twig"
    },
    "authors": [
        {
            "name": "Hari KT",
            "email": "kthari85@gmail.com"
        },
        {
            "name": "Paul M Jones",
            "email": "pmjones88@gmail.com"
        }
    ]
}
